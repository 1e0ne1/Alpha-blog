
<h1 class="text-center mt-4"><%= @article.title  %></h1>

<div class="container">
        <div class="row justify-content-md-center">
            <div class="col-8 mt-5">
                <div class="card text-center shadow mb-5 bg-white rounded">
                    <div class="card-header font-italic">
                        by Leonel Velasquez
                    </div>
                    <div class="card-body">
                        <p class="card-text text-left"><%= simple_format(@article.description) %></p>
                        <%= link_to 'Edit', edit_article_path(@article.id), class: "btn btn-outline-primary" %>
                        <%= link_to 'Delete', article_path(@article.id), method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure?"} %>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Created <%= time_ago_in_words(@article.created_at) %> ago, 
                        edited <%= time_ago_in_words(@article.updated_at) %> ago
                        </small>
                    </div>
                </div>
            </div>
        </div>
</div>
